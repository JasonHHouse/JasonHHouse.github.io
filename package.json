{
  "name": "leadership-cyoa",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "next": "^15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:fast": "playwright test --project=chromium",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "test:e2e:all-browsers": "ALL_BROWSERS=true playwright test",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "test:e2e:ci": "playwright test --reporter=html,json,junit",
    "playwright:install": "playwright install",
    "playwright:install:deps": "playwright install --with-deps",
    "playwright:install:chromium:deps": "playwright install chromium --with-deps",
    "playwright:codegen": "playwright codegen http://localhost:3000",
    "serve:static": "serve out -l 3000",
    "test:e2e:static": "npm run build && npm run serve:static & npx wait-on http://localhost:3000 && npm run test:e2e"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "png-to-ico": "^3.0.1",
    "serve": "^14.2.5",
    "sharp": "^0.34.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.4"
  }
}
